body, html {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
	background-color: #EAE4DC;
	color: #2E3B4E;
}

.container {
    display: flex;
}

.menu {
    background-color: #333;
    width: 200px;
    height: 140vh;
    color: #fff;
	
}

.menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.menu ul li {
    padding: 15px 20px;
    border-bottom: 1px solid #555;
}

.menu ul li a {
    text-decoration: none;
    color: #fff;
}

.menu ul li:hover {
    background-color: #555;
}

main {
    flex: 1;
    padding: 20px;
}

.producto {
	width: 25%;
	float: left;
	border: 1px solid #1F1004;
	background-color: #D6B895;
	color: #000000;
	margin: 1em;
	height: 18em;
	text-align: center;
	padding: 1em;

}

.precio {
	width: 20%;
	margin: auto;
	background-color: #fff;
	color: #000;
	margin-bottom: 1em;
}

.Marmota1 {
	display:block;
	margin: 0 auto;
}

.Compu {
	width: 25%;
	float: left;
	border: 2px solid #D6B895;
	color: #000000;
	margin: 2em;
	height: 18em;
	text-align: center;
	padding: 1em;
}